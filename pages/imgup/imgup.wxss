/**index.wxss**/
.feedbackContainer{
  position: relative;
  background: green;
  width: 750rpx;
  padding-bottom: 480rpx;
}
.commentView{
  padding:20rpx;
  background:lawngreen;

}
.feedText{
	width: 100%;
	height: 340rpx;
	font-family: PingFangSC-Regular;
	font-size: 30rpx;
	color: black;
	letter-spacing: 0;
	margin-bottom: 12rpx;
}

.contactInput{
	display: block;
	width: 720rpx;
	height: 88rpx;
	padding-left: 30rpx;
	font-family: PingFangSC-Regular;
	font-size: 14px;
	color: #FFFFFF;
	letter-spacing: 0;
	margin-bottom: 20rpx;
	opacity: 0.4;
    background: #172B45;
}

.imageBox{
	width: 100%;
	display: flex;
	flex-wrap: wrap;
  margin-top:24rpx;
}

.addBox{
	margin-left: 24rpx;
}

.imageList{
	display: flex;
	flex-wrap: wrap;
}

.images{
	margin-left: 24rpx;
	margin-bottom: 20rpx;
}

.imageInfo{
	position: relative;
	display: block;
	width: 160rpx;
	height: 160rpx;
}

.cancel{
  z-index: 2;
	position: absolute;
	top: 2rpx;
	right: 2rpx;
}

.feedbackBtn{
	width: 668rpx;
	height: 80rpx;
	background: #1fc516;
  border-radius: 6rpx;
  line-height: 80rpx;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: white;
  letter-spacing: 0;
  margin-top: 60rpx;
}
