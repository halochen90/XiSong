/**index.wxss**/
.feedbackContainer{
  position: relative;
  background: green;
  width: 750rpx;
  padding-bottom: 480rpx;
}

.feedText{
	width: 720rpx;
	height: 340rpx;
	padding-top: 32rpx;
	padding-left: 30rpx;
	padding-right: 38rpx;
	font-family: PingFangSC-Regular;
	font-size: 14px;
	color: black;
	letter-spacing: 0;
	background: lawngreen;
	margin-bottom: 12rpx;
}

.contactInput{
	display: block;
	width: 720rpx;
	height: 88rpx;
	padding-left: 30rpx;
	font-family: PingFangSC-Regular;
	font-size: 14px;
	color: #FFFFFF;
	letter-spacing: 0;
	margin-bottom: 20rpx;
	opacity: 0.4;
    background: #172B45;
}

.imageBox{
	width: 100%;
	display: flex;
	flex-wrap: wrap;
  margin-top:12px;
}

.addBox{
	margin-left: 24rpx;
}

.imageList{
	display: flex;
	flex-wrap: wrap;
}

.images{
	margin-left: 24rpx;
	margin-bottom: 20rpx;
}

.imageInfo{
	position: relative;
	display: block;
	width: 160rpx;
	height: 160rpx;
}

.cancel{
	position: absolute;
	top: 2rpx;
	right: 2rpx;
}

.feedbackBtn{
	width: 668rpx;
	height: 80rpx;
	background: limegreen;
    border-radius: 6rpx;
    line-height: 80rpx;
    text-align: center;
    margin-left: auto;
    margin-right: auto;
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #E5EBFE;
    letter-spacing: 0;
    margin-top: 60rpx;
}
