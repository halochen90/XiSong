<view class="bodyView">
<view hidden="{{records.length != 0}}" style="text-align:center">暂时没有任何记录..</view>
<view class="itemView" wx:for="{{records}}" wx:key="recordId" wx:for-item="record">
    <view class="imageBox">
    <!--文字描述-->
      <view class="commentView">
        <text class="commentText">{{record.comment}}</text>
      </view>
      <!--图片展示-->
      <view class="ulView">
        <ul class="imageList">
          <li class="images" wx:for="{{record.images}}" wx:key="imageId">
            <view class="imageInfo">
              <image src="{{item.name}}" class="image" bindtap="checkImage" data-src="{{item.name}}" data-images="{{record.images}}"></image>
            </view>
          </li>
        </ul>
      </view>
      <!--时间显示-->
      <view class="timeView">
        <text class="timeText">{{record.dateCreated}}</text>
      </view>
    </view>
  </view>
</view>

